---
import { Icon } from "astro-icon/components";
import { Button } from "./ui/button";
const { showGotoTop = true } = Astro.props;
---

<footer
  class="relative bottom-0 left-0 right-0 py-10 mt-20 flex flex-col gap-4 md:justify-center"
>
  <div class=`${showGotoTop ? "block" : "hidden"}`>
    <a
      class="absolute max-[550px]:bottom-full sm:bottom-[80%] right-[10%] text-secondary dark:text-primary"
      href="#top"
    >
      <Button
        variant="ghost"
        className="w-[150%] flex items-center justify-center"
        size="icon"
      >
        <Icon name={"mdi:arrow-top"} /> Topo
      </Button>
    </a>
  </div>
  <div class="flex flex-col items-center justify-center">
    <div class="flex gap-4 mt-3">
      <a href="https://github.com/">
        <Button className="hover:cursor-pointer" variant={"outline"}
          ><Icon name="mdi:github" /></Button
        >
      </a>
      <a href="https://linkedin.com/">
        <Button className="hover:cursor-pointer" variant={"outline"}
          ><Icon name="mdi:linkedin" /></Button
        >
      </a>
      <a href="https://instagram.com/">
        <Button className="hover:cursor-pointer" variant={"outline"}
          ><Icon name="mdi:instagram" /></Button
        >
      </a>
      <a href="https://twitter.com/">
        <Button className="hover:cursor-pointer" variant={"outline"}
          ><Icon name="mdi:twitter" /></Button
        >
      </a>
      <a href="mailto:matheus_santos_evangelista@hotmail.com">
        <Button className="hover:cursor-pointer" variant={"outline"}
          ><Icon name="mdi:mail" /></Button
        >
      </a>
    </div>
  </div>
  <div class="text-center text-xs text-secondary dark:text-primary mt-10">
    Â© 2025 Matheus Evangelista. Todos os direitos reservados.
  </div>
</footer>
